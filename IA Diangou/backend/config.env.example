# Configuration PostgreSQL pour IA Diangou
# Copiez ce fichier en config.env et remplissez avec vos vraies valeurs

# Option 1 : Utiliser DATABASE_URL (Recommand√© pour Neon)
# DATABASE_URL=postgresql://username:password@host.neon.tech/diangou?sslmode=require

# Option 2 : Utiliser les variables individuelles
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diangou
DB_USER=postgres
DB_PASSWORD=

# Configuration JWT
JWT_SECRET=diangou_secret_key_super_securise_$(date +%s)
JWT_EXPIRE=7d

# Configuration bcrypt
BCRYPT_ROUNDS=12

# Port du serveur
PORT=5003

# Environnement
NODE_ENV=development

# Configuration CORS
CORS_ORIGIN=http://localhost:5174

# Configuration des uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

